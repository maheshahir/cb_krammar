<div class="background">
<div class="row justify-content-center background">
    <div class="col-md-8">
            <div class="card">
                <div class="card-header">Create an Account (15 days of free trial)</div>
                <div class="card-body">
                <%= form_for @account do |f| %>
                        <div class="form-group row">
                        <%= f.label :firstname, 'First Name: ' , :class => "col-md-4 col-form-label text-md-right" %>

                            <div class="col-md-6">
                            <%= f.text_field :firstname, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group row">
                        <%= f.label :lastname, 'Last Name: ' ,  :class => "col-md-4 col-form-label text-md-right" %>
                        <div class="col-md-6">
                          <%= f.text_field :lastname, class: 'form-control' %>
                        </div>
                        </div>

                        <div class="form-group row">
                          <%= f.label :email, 'Email: ' ,  :class => "col-md-4 col-form-label text-md-right" %>
                          <div class="col-md-6">
                            <%= f.email_field :email, class: 'form-control' %>
                          </div>
                        </div>

                        <div class="form-group row">
                          <%= f.label :password, 'Password: ' ,  :class => "col-md-4 col-form-label text-md-right" %>
                          <div class="col-md-6">
                            <%= f.password_field :password, class: 'form-control' %>
                          </div>
                        </div>

                        <div class="form-group row">
                          <%= f.label :password_confirmation, 'Password Confirmation: ' ,  :class => "col-md-4 col-form-label text-md-right" %>
                          <div class="col-md-6">
                            <%= f.password_field :password_confirmation, class: 'form-control' %>
                          </div>
                        </div>

                        <div class="form-group row">
                          <%= f.label :subdomain, 'Helpdesk Link: ' ,   :class => "col-md-4 col-form-label text-md-right" %>
                          <div class="col-md-6 input-group">
                            <%= f.text_field :subdomain, class: 'form-control' %>
                            <span class="input-group-addon">.chaturbots.com</span>   
                          </div>
                        </div>

                       

                            <div class="col-md-6 offset-md-4">
                              <%= f.submit class: 'btn btn-primary' %>

                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
    </div>
</div>
</div>

<style type="text/css">
.background
{
  background-color:#00356B !important;
}
body
{
  background-color:#00356B !important;

}
</style>